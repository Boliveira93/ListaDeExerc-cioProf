package br.com.voeairlines.treinamentopoo;

import java.util.Scanner;

public class Algoritmo18 {
	
	Scanner sc = new Scanner(System.in);
	
	public void resultado() {
		System.out.println("Algoritmo18");
		System.out.println("Entrar com o raio de um círculo e imprimir a seguinte saída: Perímetro e Área");
		System.out.println("Informe o Raio: ");
		double raio = sc.nextDouble();
		double perimetro = 2 * Math.PI * raio;
		double area = Math.PI * Math.pow(raio, 2);
		System.out.println("\nResultado: ");
		System.out.println();
		System.out.printf("Perimetro: %.3f", perimetro);
		System.out.println("\nÁrea: %.3f", area);
	}

}
